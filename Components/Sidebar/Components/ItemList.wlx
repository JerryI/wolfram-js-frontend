Class = $Options["Class"];
Path  = $Options["Path"];

Dir  := ImportComponent["ItemDirectory.wlx"];
Fl   := ImportComponent["ItemFile.wlx"];

Print[StringJoin["ItemList ", Path]];

With[{
  Ul = Table[
    If[DirectoryQ[i],  
      <li><Dir File={i}/></li>,
      <li><Fl  File={i}/></li>
    ]
  , {i, FileNames["*", Path]}]
},
  <ul class="{Class}">
    <Ul/>
  </ul>
]
